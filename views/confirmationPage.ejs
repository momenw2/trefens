  <body>
    <%- include('partials/header.ejs') -%>

    <div class="mainContainer">
      <div class="dataContainer">
        <form id="orderForm" action="#">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name"
